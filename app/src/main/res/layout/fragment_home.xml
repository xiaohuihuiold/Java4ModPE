<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/home_switch_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:text="@string/home_module_status" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            android:elevation="2dp"
            app:cardBackgroundColor="#4CAF50">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_check_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Java4ModPE已准备"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center|top"
                    android:background="#E5E5E5"
                    android:gravity="left|center"
                    android:paddingStart="5dp"
                    android:text="安装/更新"
                    android:textColor="#696969"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:drawableEnd="@drawable/ic_cloud_queue"
                    android:gravity="left|center"
                    android:paddingEnd="10dp"
                    android:paddingStart="15dp"
                    android:text="Version 1.3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="8dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center|top"
                    android:gravity="left|center"
                    android:paddingStart="5dp"
                    android:text="设备信息"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:drawableStart="@drawable/ic_android"
                    android:drawableTint="#757575"
                    android:gravity="left|center"
                    android:paddingStart="15dp"
                    android:text="\u3000\u3000Android8.1.0(Oreo,API 27)"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:drawableStart="@drawable/ic_phone_android"
                    android:drawableTint="#757575"
                    android:gravity="left|center"
                    android:paddingStart="15dp"
                    android:text="\u3000\u3000Xiaomi Redmi Note 3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:drawableStart="@drawable/ic_videogame"
                    android:drawableTint="#757575"
                    android:gravity="left|center"
                    android:paddingStart="15dp"
                    android:text="\u3000\u3000MinecraftPE 1.2.10.2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:drawableStart="@drawable/ic_games"
                    android:drawableTint="#757575"
                    android:gravity="left|center"
                    android:paddingStart="15dp"
                    android:text="\u3000\u3000Blocklauncher 1.17.10"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:drawableStart="@drawable/ic_games"
                    android:drawableTint="#757575"
                    android:gravity="left|center"
                    android:paddingStart="15dp"
                    android:text="\u3000\u3000无"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
